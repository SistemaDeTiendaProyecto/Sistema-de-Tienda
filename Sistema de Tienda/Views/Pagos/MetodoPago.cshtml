@{
    ViewData["Title"] = "Método de Pago";
}

<h1 class="text-center mb-4">Seleccione su Método de Pago</h1>

<div class="card shadow-lg p-4 mx-auto" style="max-width: 450px;">
    <form>
        <div class="text-center mb-3">
            <label class="form-label fw-bold">¿Cómo desea pagar?</label>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <button type="button" class="btn btn-outline-primary p-3 metodo-pago" data-value="Tarjeta">
                💳 Tarjeta
            </button>

            <button type="button" class="btn btn-outline-success p-3 metodo-pago" data-value="Efectivo">
                💵 Efectivo
            </button>
        </div>

        <!-- Formulario visual de tarjeta -->
        <div id="formTarjeta" class="mt-4 d-none animate__animated animate__fadeIn">
            <h5 class="text-center">Formulario de Tarjeta</h5>
            <div class="mb-3">
                <label class="form-label">Número de Tarjeta</label>
                <input type="text" class="form-control" placeholder="•••• •••• •••• ••••" />
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Fecha de Expiración</label>
                    <input type="text" class="form-control" placeholder="MM/AA" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">CVV</label>
                    <input type="text" class="form-control" placeholder="•••" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Nombre en la Tarjeta</label>S
                <input type="text" class="form-control" placeholder="Nombre completo" />
            </div>
        </div>

        <!-- Mensaje para pago en efectivo -->
        <div id="mensajeEfectivo" class="alert alert-success text-center mt-4 d-none animate__animated animate__fadeIn">
            <i class="bi bi-bag-check-fill fs-3 d-block mb-2"></i>
            <strong>¡Perfecto!</strong><br />
            Su pago se realizará en tienda al momento de retirar su pedido.
        </div>

        <div class="text-center mt-4">
            <button type="button" class="btn btn-primary w-100">Confirmar</button>
            <a href="#" class="btn btn-danger w-100 mt-2">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <script>
        document.querySelectorAll('.metodo-pago').forEach(button => {
            button.addEventListener('click', function () {
                const metodo = this.getAttribute('data-value');

                const formTarjeta = document.getElementById('formTarjeta');
                const mensajeEfectivo = document.getElementById('mensajeEfectivo');

                if (metodo === "Tarjeta") {
                    formTarjeta.classList.remove('d-none');
                    mensajeEfectivo.classList.add('d-none');
                } else {
                    formTarjeta.classList.add('d-none');
                    mensajeEfectivo.classList.remove('d-none');
                }

                document.querySelectorAll('.metodo-pago').forEach(btn => btn.classList.remove('active', 'btn-primary', 'btn-success'));
                this.classList.add('active', metodo === 'Tarjeta' ? 'btn-primary' : 'btn-success');
            });
        });
    </script>
}
