@model IEnumerable<Sistema_de_Tienda.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Buscar Clientes</h1>
<div class="card shadow-lg p-4">
    <form asp-action="Index">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input type="text" name="Nombre" class="form-control" />
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label class="control-label">Correo</label>
                    <input type="text" name="Correo" class="form-control" />
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label class="control-label">Dui</label>
                    <input type="text" name="Dui" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label class="control-label">Cant. Clientes</label>
                    <select name="topRegistro" class="form-control">
                        <option selected value="10">10</option>
                        <option value="20">20</option>
                        <option value="60">60</option>
                        <option value="100">100</option>
                        <option value="500">500</option>
                        <option value="1000">1000</option>
                        <option value="0">Todos</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <input type="submit" value="Buscar" class="btn btn-primary mr-2" />
                <a class="btn btn-info" asp-action="Create">Ir a crear</a>
            </div>
        </div>
    </form>
</div>
<div class="card shadow-lg">
    <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0">Lista de Clientes</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="myTable">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Correo)</th>
                        <th>@Html.DisplayNameFor(model => model.Dui)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th>@Html.DisplayNameFor(model => model.DireccionPrincipal)</th>
                        <th>@Html.DisplayNameFor(model => model.Role)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Dui)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>@Html.DisplayFor(modelItem => item.DireccionPrincipal)</td>
                            <td>@Html.DisplayFor(modelItem => item.Role)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" class="btn btn-sm btn-outline-primary me-2" asp-route-id="@item.Id">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Details" class="btn btn-sm btn-outline-success me-2" asp-route-id="@item.Id">
                                        <i class="fas fa-info-circle"></i> Detalle
                                    </a>
                                    <a asp-action="Delete" class="btn btn-sm btn-outline-danger" asp-route-id="@item.Id">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": languageTable
            });
        });
    </script>
}
