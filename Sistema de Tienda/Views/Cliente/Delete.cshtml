@model Sistema_de_Tienda.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger">Eliminar Cliente</h1>

<div class="card shadow-lg p-4 mb-4 bg-danger-subtle rounded">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">¿Estás seguro de que deseas eliminar este cliente?</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Correo)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Correo)
            </dd>

            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.DireccionPrincipal)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DireccionPrincipal)
            </dd>

            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaNacimiento)
            </dd>

            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Telefono)
            </dd>

            <dt class="col-sm-4 text-secondary">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-sm btn-outline-danger me-2">Eliminar</button>
            <a asp-action="Index" class="btn btn-sm btn-outline-success me-2">Cancelar</a>
        </form>
    </div>
</div>

