@model Sistema_de_Tienda.Models.Tienda

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

<!-- diseño de la pagina -->

<style>

 :root {
      --bs-primary: #0d6efd;
      --bs-primary-rgb: 13, 110, 253;
    }
     .form-card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
      overflow: hidden;
    }
    
    .card-header {
      background: linear-gradient(135deg, var(--bs-primary) 0%, #0a58ca 100%);
      padding: 1.5rem;
      border-bottom: none;
    }
    
    .card-header h1 {
      color: white;
      margin-bottom: 0;
      font-weight: 600;
    }
    
    .card-header h4 {
      color: rgba(255, 255, 255, 0.85);
      margin-top: 0.25rem;
      font-weight: 400;
    }
    
    .card-body {
      padding: 2rem;
    }
    
    .form-label {
      font-weight: 500;
      color: #495057;
    }
    
    .form-control {
      padding: 0.75rem;
      border-radius: 0.5rem;
      font-size: 1rem;
      border: 1px solid #ced4da;
      transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    
    .form-control:focus {
      border-color: var(--bs-primary);
      box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.25);
    }
    
    .btn-primary {
      padding: 0.75rem 1.5rem;
      font-weight: 500;
      border-radius: 0.5rem;
      transition: all 0.2s;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(var(--bs-primary-rgb), 0.4);
    }
    
    .card-footer {
      background-color: #f8f9fa;
      border-top: 1px solid #e9ecef;
      padding: 1.25rem 2rem;
    }
    
    .back-link {
      display: inline-flex;
      align-items: center;
      text-decoration: none;
      transition: all 0.2s;
    }
    
    .back-link:hover {
      color: var(--bs-primary);
    }
    
    .back-link i {
      margin-right: 0.5rem;
      font-size: 1.1rem;
    }
    
    .pulse {
      animation-name: pulse;
      animation-duration: 0.5s;
    }

</style>

<!-- fin del diseño -->

<!-- estructura -->

 <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card form-card">
          <div class="card-header">
            <h1 class="h3 mb-0">Edit</h1>
            <h4 class="h5">Tienda</h4>
          </div>
          
          <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
              <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display: none;"></div>
              <input type="hidden" asp-for="Id" />
              
              <div class="mb-4">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <div class="input-group">
                  <span class="input-group-text bg-light">
                    <i class="bi bi-shop"></i>
                  </span>
                  <input asp-for="Nombre" class="form-control" value="despensa de don juan" required />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
              </div>
              
              <div class="mb-4">
                <label asp-for="Email" class="form-label">Email</label>
                <div class="input-group">
                  <span class="input-group-text bg-light">
                    <i class="bi bi-envelope"></i>
                  </span>
                  <input asp-for="Email" type="email" class="form-control" value="donjuan@gmail.com" required />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              
              <div class="mb-4">
                <label asp-for="Direccion" class="form-label">Dirección</label>
                <div class="input-group">
                  <span class="input-group-text bg-light">
                    <i class="bi bi-geo-alt"></i>
                  </span>
                  <input asp-for="Direccion" class="form-control" value="parque sonsonate" required />
                </div>
                <span asp-validation-for="Direccion" class="text-danger"></span>
              </div>
              
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" id="saveBtn">
                  <i class="bi bi-save me-2"></i> Guardar
                </button>
              </div>
            </form>
          </div>
          
          <div class="card-footer">
            <a asp-action="Index" class="back-link text-secondary">
              <i class="bi bi-arrow-left"></i> Volver al Listado
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- fin -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>