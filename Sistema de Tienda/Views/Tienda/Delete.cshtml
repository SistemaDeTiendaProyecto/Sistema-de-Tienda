@model Sistema_de_Tienda.Models.Tienda

<!-- diseño de la pagina -->

<style>

 .delete-container {
            max-width: 650px;
            margin: 3rem auto;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background-color: white;
        }
        .header-section {
            background: linear-gradient(135deg, #e53935 0%, #e35d5b 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }
        .header-section h1 {
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 2.5rem;
        }
        .header-section h3 {
            font-weight: 400;
            margin-bottom: 1rem;
            opacity: 0.9;
        }
        .warning-icon {
            font-size: 3.5rem;
            margin-bottom: 1rem;
        }
        .content-section {
            padding: 2rem;
        }
        .store-info {
            background-color: #f8f9fa;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-left: 5px solid #e53935;
        }
        dt {
            font-weight: 600;
            color: #444;
            padding: 0.5rem 0;
        }
        dd {
            padding: 0.5rem 0 1rem 1rem;
            margin-bottom: 0.5rem;
            color: #212529;
            font-size: 1.1rem;
            border-bottom: 1px solid #eee;
        }
        .btn-danger {
            background: linear-gradient(135deg, #e53935 0%, #e35d5b 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
        }
        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(229, 57, 53, 0.4);
        }
        .back-link {
            color: #6c757d;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            margin-left: 15px;
        }
        .back-link:hover {
            color: #e53935;
        }
        .actions {
            display: flex;
            align-items: center;
        }
        .animated {
            animation-duration: 0.5s;
            animation-fill-mode: both;
        }
        
        .fadeIn {
            animation-name: fadeIn;
        }
        .pulse {
            animation: pulse 2s infinite;
        }
        .highlight {
            background-color: #ffebee;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
        }

</style>
<!-- fin del diseño de pagina -->

<!-- estructura -->

 <div class="container">
        <div class="delete-container animated fadeIn">
            <div class="header-section">
                <i class="fas fa-exclamation-triangle warning-icon pulse"></i>
                <h1>Delete</h1>
                <h3>Seguro que quieres borrar esta?</h3>
            </div>
            
            <div class="content-section">
                <h4 class="mb-4 text-center">Tienda</h4>
                
                <dl class="row store-info">
                    <dt class="col-sm-2">
                        Nombre
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    
                    <dt class="col-sm-2">
                        Dirección
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                </dl>
                
                <div class="actions">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" 
                               onclick="return confirm('¿Está seguro que desea eliminar esta tienda? Esta acción no se puede deshacer.');" />
                    </form>
                    <a asp-action="Index" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

<!-- fin de la estructura-->

<!-- peligroso no eliminar -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>