<form asp-action="Create" enctype="multipart/form-data">
    <div class="container m-50 mt-10 mh-300">
    <p class="text-muted text-left">Crear Productos</p>
        <!-- Fila superior: columna izquierda para imagen, columna derecha para los tres inputs -->
        <div class="row mb-1">
            <!-- Columna izquierda (ocupa 6 de 12 columnas) -->

            <div class="col-md-4 mt-">
                <div class="bg-light  h-100 ">
                    <!-- Aquí irá la imagen y el input file -->
                    <p class="text-muted text-center">Área para imagen</p>

                     <div class="text-center">
                        <img id="imagePreview" src="" alt="vista previa">

                     </div>
                     

                     <div class="text-center mt-3">
                            <label for="image-upload" class="btn btn-outline-secondary">
                                <i class="fas fa-upload me-2"></i> Subir imagen
                            </label>
                            <input type="file" id="image-upload" accept="image/*"  style="display: none;"/>
                            <p id="file-name" class="mt-2"></p>
                    </div>
                </div>
            </div>
            
            <!-- Columna derecha (ocupa 6 de 12 columnas) -->
            <div class="col-md-4">
                <div class="bg-white  h-100 ">
                    <!-- Aquí irán los tres inputs -->
                    

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
                    <div class="form-group mt-2">
                        <label asp-for="IdCategoria" class="control-label"></label>
                        <select asp-for="IdCategoria" class ="form-control" asp-items="ViewBag.IdCategoria"></select>
                    </div>

                    <div class="form-group mt-2 ">
                        <label asp-for="IdTienda" class="control-label"></label>
                        <select asp-for="IdTienda" class ="form-control" asp-items="ViewBag.IdTienda"></select>
                    </div>

                    <div class="form-group mt-2">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>
        </div>
        
        <!-- Fila inferior: dos columnas para los inputs que abarcan todo el ancho -->
        <div class="row">
            <!-- Primera columna inferior (ocupa 6 de 12 columnas) -->
            <div class="col-md-4" mt-2>
                <div class="bg-light  mb-1">
         
                    <div class="form-group ">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <!-- Segunda columna inferior (ocupa 6 de 12 columnas) -->
            <div class="col-md-2">
                <div class="bg-white  mb-1">
                    <!-- Aquí irá el segundo input ancho -->
                   
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                </div>
            </div>
             <div class="col-md-2 ">
                <div class="bg-white  mb-1">
                    <!-- Aquí irá el tercero input ancho -->
                    
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div clas="row ">
                <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            



            </div>


        </div>
    </div>


</form>


<script>
    document.getElementById('image-upload').addEventListener('change', function (event) {
        const file = event.target.files[0];
        @* const preview = document.getElementById('preview'); *@
        const imagePreview = document.getElementById('imagePreview');

        if (file) {
            const fileReader = new FileReader();

            fileReader.onload = function (e) {
                imagePreview.src = e.target.result;
                @* preview.style.display = 'block'; *@
            };

            fileReader.readAsDataURL(file);
        } else {
            imagenPrevia.src = '#';
            @* preview.style.display = 'none'; *@
        }
    });
</script>






