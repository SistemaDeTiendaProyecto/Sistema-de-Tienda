@model List<Sistema_de_Tienda.Models.DetallesPedido>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Carrito de Compras</h5>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Imagen</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="producto-@item.Id">
                                <td class="text-center" style="width: 80px;">
                                    @if (item.IdProductoNavigation != null && !string.IsNullOrEmpty(item.IdProductoNavigation.ImagenUrl))
                                    {
                                        <img src="@item.IdProductoNavigation.ImagenUrl" alt="@item.IdProductoNavigation.NombreProducto" 
                                             class="img-thumbnail" style="max-height: 50px; max-width: 50px;" />
                                    }
                                    else
                                    {
                                        <img src="/img/producto-default.png" alt="Sin imagen" 
                                             class="img-thumbnail" style="max-height: 50px; max-width: 50px;" />
                                    }
                                </td>
                                <td>
                                    @if (item.IdProductoNavigation != null)
                                    {
                                        @item.IdProductoNavigation.NombreProducto
                                    }
                                    else
                                    {
                                        <span>Producto #@item.IdProducto</span>
                                    }
                                </td>
                                <td>@item.PrecioUnitario.ToString("C2")</td>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary btn-sm" type="button" onclick="actualizarCantidad(@item.Id, -1)">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" class="form-control text-center" id="cantidad-@item.Id" value="@item.Cantidad" readonly min="1" style="max-width: 60px;">
                                        <button class="btn btn-outline-secondary btn-sm" type="button" onclick="actualizarCantidad(@item.Id, 1)">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </td>
                                <td id="subtotal-@item.Id">@((item.Cantidad * item.PrecioUnitario).ToString("C2"))</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" onclick="eliminarProducto(@item.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info">
                            <td colspan="4" class="text-end fw-bold">Total:</td>
                            <td colspan="2" class="fw-bold" id="total-carrito">
                                @Model.Sum(i => i.Cantidad * i.PrecioUnitario).ToString("C2")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light">
                <button class="btn btn-secondary" onclick="vaciarCarrito()">
                    <i class="bi bi-cart-x"></i> Vaciar Carrito
                </button>
                <button class="btn btn-success" onclick="finalizarCompra()">
                    <i class="bi bi-check-circle"></i> Finalizar Compra
                </button>
            </div>
        }
        else
        {
            <div class="text-center p-4">
                <i class="bi bi-cart text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3">Tu carrito está vacío</p>
                <a href="@Url.Action("Index", "Productos")" class="btn btn-primary">
                    <i class="bi bi-shop"></i> Ir a Comprar
                </a>
            </div>
        }
    </div>
</div>