    <script>

                $(document).ready(function() {

        // Función para obtener el carrito del localStorage
        function getCarrito() {
            let carrito = JSON.parse(localStorage.getItem('carrito')) || [];
            return carrito;
        }

        // Función para guardar el carrito en el localStorage
        function guardarCarrito(carrito) {
            localStorage.setItem('carrito', JSON.stringify(carrito));
        }

        // Función para agregar un producto al carrito
        function agregarAlCarrito(idProducto, nombre, precio, imagen) {
            let carrito = getCarrito();
            let productoExistente = carrito.find(producto => producto.idProducto === idProducto);

            if (productoExistente) {
            // Si el producto ya existe, actualiza la cantidad y el subtotal
            productoExistente.cantidad++;
            productoExistente.subtotal = productoExistente.cantidad * precio;
            } else {
            // Si el producto no existe, agrega un nuevo producto al carrito
            carrito.push({
                idProducto: idProducto,
                nombre: nombre,
                cantidad: 1,
                precio: precio,
                subtotal: precio, // Inicialmente, el subtotal es igual al precio
                imagen: imagen
            });
            }

            guardarCarrito(carrito);
            console.log(carrito); // Imprime el carrito actualizado en la consola
        }

        // Evento click para el botón "Añadir al carrito"
        $('.add-to-cart-btn').click(function() {
            let idProducto = $(this).data('id');
            let nombre = $(this).closest('.product-card').find('.product-title').text().trim(); // Obtiene el nombre del producto
            let precio = parseFloat($(this).data('precio'));
            let imagen = $(this).closest('.product-card').find('.product-image').data('image'); // Obtiene la URL de la imagen

            agregarAlCarrito(idProducto, nombre, precio, imagen);
        });

        });
                
     
    </script>
