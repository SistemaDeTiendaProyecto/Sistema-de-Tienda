                @Html.DisplayFor(modelItem => item.FechaFacturacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoFacturacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoEnvio)
